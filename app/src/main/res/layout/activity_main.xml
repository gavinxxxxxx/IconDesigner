<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.gavin.app.PreView
            android:id="@+id/pre"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:elevation="2dp"
            tools:background="#44444444" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="256dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <me.gavin.widget.MultilevelMenu
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:elevation="6dp"
            app:mlm_menuHorizontal="@menu/menu_horizontal"
            app:mlm_menuItemBgColor="@color/colorPrimaryLight"
            app:mlm_menuItemElevation="6dp"
            app:mlm_menuItemIconColor="@android:color/white"
            app:mlm_menuItemMargin="24dp"
            app:mlm_menuItemPadding="8dp"
            app:mlm_menuItemRadius="20dp"
            app:mlm_menuVertical="@menu/menu_vertical"
            app:mlm_originBgColor="@color/colorPrimaryLight"
            app:mlm_originIcon="@drawable/ic_gesture_24dp"
            app:mlm_originIconColor="@android:color/white"
            app:mlm_originMargin="16dp"
            app:mlm_originPadding="16dp"
            app:mlm_originRadius="28dp" />

    </android.support.design.widget.CoordinatorLayout>

</layout>
