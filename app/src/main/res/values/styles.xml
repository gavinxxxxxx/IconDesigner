<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!-- for android.support.v7.app.AlertDialog -->
        <item name="alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert.Custom</item>
        <!-- for android.app.AlertDialog -->
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert.Custom</item>
        <!-- for android.support.design.widget.BottomSheetDialog -->
        <item name="bottomSheetDialogTheme">@style/Theme.Design.Light.BottomSheetDialog.Custom
        </item>
    </style>

    <!--<style name="ThemeOverlay.AppCompat.Dialog.Alert.Custom">-->
    <style name="Theme.AppCompat.Dialog.Alert.Custom">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Theme.Design.Light.BottomSheetDialog.Custom">
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal.Custom</item>
    </style>

    <style name="Widget.Design.BottomSheet.Modal.Custom">
        <item name="android:windowFullscreen">true</item>
        <!--<item name="behavior_peekHeight">2000dp</item>-->
    </style>

</resources>
